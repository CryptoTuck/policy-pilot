# OpenAI API Key (get from https://platform.openai.com)
OPENAI_API_KEY=sk-your-key-here

# Webhook secret for verification (generate a random string)
WEBHOOK_SECRET=your-webhook-secret-here

# Base URL for the app
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Canopy Connect Configuration
# Widget alias from Canopy dashboard (https://app.usecanopy.com/dashboard/customize)
NEXT_PUBLIC_CANOPY_PUBLIC_ALIAS=policy-pilot

# Set to "true" to show sandbox mode banner (for testing with sandbox credentials)
NEXT_PUBLIC_SANDBOX_MODE=true
